                    {% include 'task_goods/_filter.html.twig' %}
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="tasks-goods" class="table table-bordered table-striped table-hover">
                        <thead>
                        <tr>
                            <th class="toggle-all"><i id="select_all" name="select_invoice"></i></th>
                            <th>Код</th>
