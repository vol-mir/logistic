<div class="card-body">

    {{ form_row(form._token) }}

    <div class="form-group">
        {{ form_label(form.goods) }}
        {{ form_widget(form.goods) }}

        {% if form.goods.vars['errors']|length > 0 %}
            <ul class="list-unstyled">
                {% for error in form.goods.vars['errors'] %}
                    <li class="text-danger small">{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>

    <div class="row">
        <div class="col-sm-3">
            <div class="form-group">
                {{ form_label(form.weight) }}
