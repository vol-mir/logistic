<div class="card-body">

    {{ form_row(form._token) }}

    <div class="form-group">
        {{ form_label(form.status) }}
        {{ form_widget(form.status) }}

        {% if form.status.vars['errors']|length > 0 %}
            <ul class="list-unstyled">
                {% for error in form.status.vars['errors'] %}
                    <li class="text-danger small">{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.drivers) }}
        {{ form_widget(form.drivers, { 'attr': {'data-placeholder': 'placeholder.not_specified'|trans} }) }}

        {% if form.drivers.vars['errors']|length > 0 %}
            <ul class="list-unstyled">
                {% for error in form.drivers.vars['errors'] %}
                    <li class="text-danger small">{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.transports) }}
        {{ form_widget(form.transports, { 'attr': {'data-placeholder': 'placeholder.not_specified'|trans} }) }}

        {% if form.transports.vars['errors']|length > 0 %}
            <ul class="list-unstyled">
                {% for error in form.transports.vars['errors'] %}
                    <li class="text-danger small">{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.report) }}
        {{ form_widget(form.report) }}

        {% if form.report.vars['errors']|length > 0 %}
            <ul class="list-unstyled">
                {% for error in form.report.vars['errors'] %}
                    <li class="text-danger small">{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>

</div>
<!-- /.card-body -->

